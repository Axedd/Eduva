@page
@model SchoolSystem.Pages.Class.indexModel
@{
}

<h1>Klasser:</h1>


<div class="container-fluid">
    <div class="row">
        @foreach (var Class in Model.SchoolClasses)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 p-1">
                <div class="class-card">
                    <a asp-page="./Class" asp-route-id="@Class.ClassId" class="class-link">
                        @Class.ClassName
                    </a>
                </div>
            </div>
        }
    </div>
</div>


<link rel="stylesheet" href="~/css/class-list.css" />