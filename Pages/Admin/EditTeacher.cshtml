@page
@model SchoolSystem.Pages.Admin.EditTeacherModel
@{
}



<h1>Edit Teacher Details</h1>

<form method="post">
    <input type="hidden" name="Teacher.TeacherId" value="@Model.Teacher.TeacherId" />

    <div class="form-group row">
        <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" name="Teacher.FirstName" class="form-control" id="inputFirstName" value="@Model.Teacher.FirstName" />
        </div>
    </div><br />

    <div class="form-group row">
        <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" name="Teacher.LastName" class="form-control" id="inputLastName" value="@Model.Teacher.LastName" />
        </div>
    </div><br />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Subjects</label>
        <div class="col-sm-10">
            <select class="form-control" name="SelectedTeacherSubjectId">
                @foreach (var Subject in Model.Teacher.SubjectTeachers)
                {
                    <option>@Subject.Subject.SubjectName</option>
                }
            </select>
        </div>
    </div><br />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Subject List</label>
        <div class="col-sm-8">
            <select class="form-control" name="SelectedSubjectId">
                @foreach (var Subject in Model.Subjects)
                {
                    <option value="@Subject.SubjectId">@Subject.SubjectName</option>
                }
            </select>
        </div>
        <div class="col-sm-2">
            <button type="submit" formaction="@Url.Page("EditTeacher", "AssignTeacherSubject")" class="btn btn-primary btn-sm">Assign Subject</button>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
