@page
@model SchoolSystem.Pages.Admin.RegisterUserModel
@{
    ViewData["Title"] = "Register User";
}



<h1>Register User</h1>

<!-- Display success message if available -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model.Teacher != null)
{
    if (Model.Teacher.UserId != null) // Check if UserId is not null
    {
        <h2>Student Information</h2>
        <ul>
            <li><strong>Name:</strong> @Model.Teacher.FirstName @Model.Teacher.LastName</li>
            <li><strong>Address:</strong> @Model.Teacher.Address</li>
            <li><strong>Date of Birth:</strong> @Model.Teacher.DateOfBirth?.ToString("yyyy-MM-dd")</li>
            <li><strong>Joined Date:</strong> @Model.Teacher.JoinedDate.ToString("yyyy-MM-dd")</li>
        </ul>
        <p>This user is already registered. Please contact support if you need to make any changes.</p>
    }
    else {
    <h2>Register New Teacher</h2>
    <form method="post">
        <div class="form-group row">
            <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" name="NewApplicationUser.FirstName" class="form-control" id="inputFirstName" value="@Model.Teacher.FirstName" />
                <span asp-validation-for="NewApplicationUser.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" name="NewApplicationUser.LastName" class="form-control" id="inputLastName" value="@Model.Teacher.LastName" />
                <span asp-validation-for="NewApplicationUser.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input type="text" name="NewApplicationUser.Address" class="form-control" id="inputAddress" value="@Model.Teacher.Address" />
                <span asp-validation-for="NewApplicationUser.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="DateOfBirth" class="col-sm-2 col-form-label">Date of Birth</label>
            <div class="col-sm-10">
                <input type="date" name="NewApplicationUser.DateOfBirth" class="form-control" id="inputDateOfBirth" value="@Model.Teacher.DateOfBirth?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="NewApplicationUser.DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="JoinedDate" class="col-sm-2 col-form-label">Joined Date</label>
            <div class="col-sm-10">
                <input type="date" name="NewApplicationUser.JoinedDate" class="form-control" id="inputJoinedDate" value="@Model.Teacher.JoinedDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="NewApplicationUser.JoinedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" name="ApplicationUser.Email" class="form-control" id="inputEmail" value="" />
                <small>Optional - if the user has a school-related email.</small>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
    }
}
else if (Model.Student != null)
{
    if (Model.Student.UserId != null) // Check if UserId is not null
    {
        <h2>Student Information</h2>
        <ul>
            <li><strong>Name:</strong> @Model.Student.FirstName @Model.Student.LastName</li>
            <li><strong>Address:</strong> @Model.Student.Address</li>
            <li><strong>Date of Birth:</strong> @Model.Student.DateOfBirth?.ToString("yyyy-MM-dd")</li>
            <li><strong>Joined Date:</strong> @Model.Student.JoinedDate.ToString("yyyy-MM-dd")</li>
        </ul>
        <p>This user is already registered. Please contact support if you need to make any changes.</p>
    }
    else
    {
        <h2>Register New Student</h2>
        <form method="post">
            <div class="form-group row">
                <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" name="NewApplicationUser.FirstName" class="form-control" id="inputFirstName" value="@Model.Student.FirstName" />
                    <span asp-validation-for="NewApplicationUser.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" name="NewApplicationUser.LastName" class="form-control" id="inputLastName" value="@Model.Student.LastName" />
                    <span asp-validation-for="NewApplicationUser.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Address" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <input type="text" name="NewApplicationUser.Address" class="form-control" id="inputAddress" value="@Model.Student.Address" />
                    <span asp-validation-for="NewApplicationUser.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="DateOfBirth" class="col-sm-2 col-form-label">Date of Birth</label>
                <div class="col-sm-10">
                    <input type="date" name="NewApplicationUser.DateOfBirth" class="form-control" id="inputDateOfBirth" value="@Model.Student.DateOfBirth?.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="NewApplicationUser.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="JoinedDate" class="col-sm-2 col-form-label">Joined Date</label>
                <div class="col-sm-10">
                    <input type="date" name="NewApplicationUser.JoinedDate" class="form-control" id="inputJoinedDate" value="@Model.Student.JoinedDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="NewApplicationUser.JoinedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="ApplicationUser.Email" class="form-control" id="inputEmail" value="" />
                    <small>Optional - if the user has a school-related email.</small>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    }
}
else
{
    <p>No information available.</p>
}

