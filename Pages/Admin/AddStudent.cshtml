@page
@model SchoolSystem.Pages.Admin.AddStudentModel
@{
}




<form method="post">

    <div class="form-group row">
        <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" name="Student.FirstName" class="form-control" id="inputFirstName" />
        </div>
    </div><br />

    <div class="form-group row">
        <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" name="Student.LastName" class="form-control" id="inputLastName"  />
        </div>
    </div><br />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Subjects</label>
        <div class="col-sm-10">
            <select class="form-control" name="Student.StudentClassId">
                @foreach (var StudentClass in Model.StudentClasses)
                {
                    <option value="@StudentClass.StudentClassId">@StudentClass.ClassName</option>
                }
            </select>
        </div>
    </div><br />


    <button type="submit" class="btn btn-primary">Add Student</button>
</form>